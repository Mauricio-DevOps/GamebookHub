@page
@model LoginModel
@{
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";
    ViewData["Title"] = "Entrar";
}

<style>
    :root {
        --brand-1: #7e46e4;
        --brand-2: #a45de6;
        --brand-3: #f3a4d6;
        --surface: #ffffff;
        --ink: #212529;
        --muted: #6c757d;
        --field: #f7f7ff;
        --ring: rgba(164,93,230,.25);
        --shadow: 0 24px 60px rgba(0,0,0,.20);
        --radius: 18px;
        --radius-sm: 10px;
    }

    /* Fundo full */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: linear-gradient(180deg, var(--brand-1) 0%, var(--brand-2) 40%, var(--brand-3) 100%);
    }

    /* Centralização */
    .auth-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
    }

    /* Card */
    .card-auth {
        width: 100%;
        max-width: 440px;
        background: var(--surface);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .card-auth__header {
        height: 150px;
        background: radial-gradient(1000px 220px at 50% -70%, rgba(255,255,255,.35) 0%, rgba(255,255,255,0) 60%), linear-gradient(160deg, #6b33dd 0%, #c174f1 100%);
        display: flex;
        align-items: flex-end;
        justify-content: center;
        padding: 24px;
    }

    .card-auth__title {
        color: #fff;
        font-weight: 800;
        letter-spacing: .4px;
        font-size: 1.8rem;
        margin: 0;
        transform: translateY(8px);
        text-shadow: 0 2px 10px rgba(0,0,0,.15);
    }

    .card-auth__body {
        padding: 0px 100px 0px;
    }

    /* Campos */
    .form-floating {
        margin-bottom: 14px;
    }

    .card-auth .form-control {
        height: 52px;
        border-radius: var(--radius-sm);
        background: var(--field);
        border: 1px solid #e5e5ef;
        font-size: 1rem;
        padding: 0 14px;
    }

        .card-auth .form-control:focus {
            border-color: var(--brand-2);
            box-shadow: 0 0 0 3px var(--ring);
            background: #fff;
        }

    .card-auth .form-floating > label {
        color: #7a7d86;
        font-size: .95rem;
        padding: .75rem .75rem;
    }

    /* Lembrar-me */
    .auth-remember {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 10px 0 16px;
        color: var(--ink);
    }

    /* Botão */
    .btn-auth {
        height: 50px;
        width: 100%;
        border-radius: 12px;
        border: 0;
        background: linear-gradient(90deg, #6b33dd 0%, #8e4ef0 100%);
        color: #fff;
        font-weight: 700;
        letter-spacing: .3px;
        transition: transform .05s ease, filter .15s ease;
    }

        .btn-auth:hover {
            filter: brightness(1.05);
        }

        .btn-auth:active {
            transform: translateY(1px);
        }

    /* Links */
    .auth-links {
        display: flex;
        gap: 16px;
        justify-content: space-between;
        margin-top: 14px;
        font-size: .95rem;
    }

        .auth-links a {
            color: var(--muted);
            text-decoration: none;
        }

            .auth-links a:hover {
                text-decoration: underline;
            }

    .auth-extra {
        margin-top: 8px;
        font-size: .95rem;
    }

    /* Validações */
    .validation-summary-errors {
        background: #fff4f4;
        border: 1px solid #ffd4d4;
        color: #c0392b;
        border-radius: 12px;
        padding: 10px 12px;
        margin-bottom: 12px;
        font-size: .95rem;
    }
</style>

<div class="auth-wrapper">
    <div class="card-auth">
        <div class="card-auth__header">
            <h1 class="card-auth__title">Entrar</h1>
        </div>

        <div class="card-auth__body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email@exemplo.com" />
                    <label asp-for="Input.Email">E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Senha" />
                    <label asp-for="Input.Password">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <label class="auth-remember">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <span>Lembrar-me</span>
                </label>

                <button id="login-submit" type="submit" class="btn-auth">Entrar</button>

                <div class="auth-links">
                    <a asp-page="./ForgotPassword">Esqueceu a senha?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar conta</a>
                </div>

                <div class="auth-extra">
                    <a asp-page="./ResendEmailConfirmation">Reenviar confirmação de e-mail</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
