@* Areas/Admin/Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="admin-body">
    <header class="admin-nav sticky-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container-xxl">
                <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav"
                        aria-controls="adminNav" aria-expanded="false" aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="adminNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @{
                            var ctrl = (ViewContext.RouteData.Values["controller"] as string ?? "").ToLowerInvariant();
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ctrl == "home" ? "active" : "")"
                               asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ctrl == "gamebooks" ? "active" : "")"
                               asp-area="Admin" asp-controller="Gamebooks" asp-action="Index">Gamebooks</a>
                        </li>

                        

                    </ul>

                    <div class="d-flex gap-2">@RenderSection("NavRight", required: false)</div>
                </div>
            </div>
        </nav>
        <header class="admin-nav sticky-top"> ... </header>

        <!-- SUBMENU FIXO LOGO ABAIXO DA NAVBAR -->
        @RenderSection("Subnav", required: false)

        <main class="admin-shell container-xxl">
            @RenderBody()
        </main>
    </header>

    


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
