@model GamebookHub.Models.GameNode
@{
    ViewData["Title"] = "Editar Nó";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-node-form.css" asp-append-version="true" />
}

<!-- PAGE HEADER -->
<div class="gb-form-header">
    <div class="container-xxl">
        <a class="btn btn-secondary btn-sm"
           asp-area="Admin" asp-controller="Nodes" asp-action="Index"
           asp-route-gamebookId="@Model.GamebookId">
            <i class="bi bi-arrow-left"></i>
            Voltar aos Nós
        </a>
        <div class="d-flex flex-wrap align-items-center gap-3 mt-3">
            <h1 class="mb-0">
                <i class="bi bi-pencil-square"></i>
                Editar Nó
            </h1>
            <span class="badge bg-dark bg-opacity-75 px-3 py-2">
                <i class="bi bi-hash me-1"></i>@Model.Id
            </span>
            <span class="badge bg-primary bg-opacity-75 px-3 py-2">
                <i class="bi bi-key me-1"></i>@Model.Key
            </span>
        </div>
        <p >
            Ajuste o conteúdo, mantenha a narrativa alinhada e deixe o nó com a melhor apresentação possível.
        </p>
    </div>
</div>

<!-- NODE EDIT FORM -->
<div class="container-xxl">
    <div class="gb-form-container">
        <form asp-action="Edit" method="post" class="gb-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GamebookId" />

            @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
            {
                <div class="alert alert-danger mb-4">
                    <div class="d-flex gap-2">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <div>
                            <strong>Revise os campos antes de salvar:</strong>
                            <div asp-validation-summary="All" class="mt-2 mb-0"></div>
                        </div>
                    </div>
                </div>
            }

            <!-- SECTION: INFORMAÇÕES DO NÓ -->
            <div class="gb-form-section">
                <div class="gb-form-section-header">
                    <h2>
                        <span class="gb-section-number">1</span>
                        Informações do Nó
                    </h2>
                </div>

                <div class="row g-3">
                    <div class="col-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Key" class="form-label gb-form-label">
                                <i class="bi bi-key"></i>
                                Identificador (Key)
                            </label>
                            <input asp-for="Key" class="form-control gb-form-control" placeholder="ex: primeira_decisao" />
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i>
                                Use letras minúsculas e _ para separar palavras.
                            </small>
                            <span asp-validation-for="Key" class="invalid-feedback d-block"></span>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6">
                        <div class="gb-toggle-group h-100">
                            <div class="form-check form-switch gb-form-switch">
                                <input class="form-check-input" asp-for="IsEnding" type="checkbox" />
                                <label class="form-check-label" asp-for="IsEnding">
                                    <i class="bi bi-flag"></i>
                                    Marcar como Final da História
                                </label>
                            </div>
                            <p class="text-muted small mb-0">
                                Ative se este nó encerra a narrativa sem novas escolhas.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SECTION: CONTEÚDO -->
            <div class="gb-form-section">
                <div class="gb-form-section-header">
                    <h2>
                        <span class="gb-section-number">2</span>
                        Conteúdo
                    </h2>
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label gb-form-label" asp-for="Text">
                                <i class="bi bi-chat-left-text"></i>
                                Texto (Markdown)
                            </label>
                            <textarea asp-for="Text" class="form-control gb-form-control" rows="12" placeholder="Atualize o texto do nó aqui..."></textarea>
                            <small class="form-text text-muted">
                                <i class="bi bi-lightning-charge"></i>
                                Dica: utilize Markdown para destacar trechos importantes.
                            </small>
                            <span asp-validation-for="Text" class="invalid-feedback d-block"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ACTIONS -->
            <div class="gb-form-actions">
                <button class="btn btn-primary btn-lg" type="submit">
                    <i class="bi bi-check-circle"></i>
                    Salvar Alterações
                </button>
                <a class="btn btn-secondary btn-lg"
                   asp-area="Admin" asp-controller="Nodes" asp-action="Index"
                   asp-route-gamebookId="@Model.GamebookId">
                    <i class="bi bi-arrow-left"></i>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
