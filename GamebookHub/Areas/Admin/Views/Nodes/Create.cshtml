@model GamebookHub.Models.GameNode
@{
    ViewData["Title"] = "Novo Nó";
}
<h3>@ViewData["Title"]</h3>

<form asp-area="Admin" asp-controller="Nodes" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="GamebookId" />

    <div class="mb-3">
        <label class="form-label" asp-for="Key"></label>
        <input class="form-control" asp-for="Key" />
        <span class="text-danger" asp-validation-for="Key"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Text">Texto (Markdown)</label>
        <textarea class="form-control" asp-for="Text" rows="6"></textarea>
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsEnding" />
        <label class="form-check-label" asp-for="IsEnding">Final?</label>
    </div>

    <button class="btn btn-primary" type="submit">Salvar</button>
    <a class="btn btn-secondary"
       asp-area="Admin" asp-controller="Nodes" asp-action="Index"
       asp-route-gamebookId="@Model.GamebookId">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
