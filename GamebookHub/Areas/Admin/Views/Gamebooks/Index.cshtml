@model IEnumerable<GamebookHub.Models.Gamebook>
@{
    ViewData["Title"] = "Gamebooks";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-gamebooks.css" asp-append-version="true" />

}

@section Subnav {
    <div class="admin-subnav">
        <div class="container-xxl">
            <a class="btn btn-outline-light" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
            <a class="btn btn-outline-light active" asp-area="Admin" asp-controller="Gamebooks" asp-action="Index">Gamebooks</a>
            @* adicione outras abas do Admin aqui *@
        </div>
    </div>
}

@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- CSS base -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

<div class="gb-wrap">
    <div class="gb-head">
        <div>
            <h1 class="gb-title">Gamebooks</h1>
            @if (TempData["ok"] is string okMsg)
            {
                <div class="alert alert-success py-2 px-3 my-2">@okMsg</div>
            }
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary"
               asp-area="Admin" asp-controller="Gamebooks" asp-action="Create">
                Criar novo
            </a>
            <a class="btn btn-outline-secondary"
               asp-area="Admin" asp-controller="Gamebooks" asp-action="Import">
                Importar JSON
            </a>
        </div>
    </div>

    <div class="card gb-card">
        <div class="table-responsive">
            <table class="table table-hover align-middle gb-table">
                <thead class="table-light">
                    <tr>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Slug</th>
                        <th>Publicado em</th>
                        <th>Status</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var isPublished = item.IsPublished;
                        <tr>
                            <td>
                                <div class="gb-titlecell">
                                    <img class="gb-thumb" src="@(item.CoverUrl ?? "/images/placeholder.png")" alt="@item.Title" loading="lazy" />
                                    <div>
                                        <div class="fw-semibold">@item.Title</div>
                                        @if (!string.IsNullOrWhiteSpace(item.Description))
                                        {
                                            <div class="gb-meta text-truncate" style="max-width: 420px;">@item.Description</div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>@(item.AuthorId ?? "-")</td>
                            <td><code>@item.Slug</code></td>
                            <td>@(item.PublishedAt?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>
                                @if (isPublished)
                                {
                                    <span class="badge text-white badge-published">Publicado</span>
                                }
                                else
                                {
                                    <span class="badge text-white badge-draft">Rascunho</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="gb-actions">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                                    <a class="btn btn-sm btn-secondary"
                                       asp-area="Admin" asp-controller="Nodes" asp-action="Index"
                                       asp-route-gamebookId="@item.Id">
                                        Nós
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
