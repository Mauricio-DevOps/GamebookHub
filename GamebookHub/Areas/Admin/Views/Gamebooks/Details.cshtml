@model GamebookHub.Models.Gamebook
@using GamebookHub.Models
@using System.Linq
@{
    ViewData["Title"] = "Detalhes do Gamebook";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/admin-gamebook-details.css" />
}

<!-- PAGE HEADER -->
<div class="gb-details-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <div class="d-flex align-items-center gap-3">
                    <div class="gb-header-icon">
                        <i class="bi bi-book-half"></i>
                    </div>
                    <div>
                        <h1 class="mb-1">@Html.DisplayFor(m => m.Title)</h1>
                        <p class="text-muted mb-0">
                            <i class="bi bi-clock-history"></i>
                            Atualizado em @Html.DisplayFor(m => m.PublishedAt, "{0:dd/MM/yyyy HH:mm}")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <span class="badge @(Model.IsPublished ? "bg-success" : "bg-warning")">
                    @(Model.IsPublished ? "Publicado" : "Rascunho")
                </span>
            </div>
        </div>
    </div>
</div>

<!-- SECTION 1: INFORMAÇÕES GERAIS -->
<div class="gb-section">
    <div class="gb-section-header">
        <h2>
            <span class="gb-section-number">1</span>
            Informações Gerais
        </h2>
    </div>

    <div class="row g-4">
        <!-- TÍTULO -->
        <div class="col-lg-6">
            <div class="gb-field-box">
                <label class="gb-field-label">
                    <i class="bi bi-type"></i>
                    Título
                </label>
                <p class="gb-field-value">@Html.DisplayFor(m => m.Title)</p>
            </div>
        </div>

        <!-- SLUG -->
        <div class="col-lg-6">
            <div class="gb-field-box">
                <label class="gb-field-label">
                    <i class="bi bi-link"></i>
                    Slug
                </label>
                <p class="gb-field-value font-monospace">@Html.DisplayFor(m => m.Slug)</p>
            </div>
        </div>

        <!-- DESCRIÇÃO -->
        <div class="col-12">
            <div class="gb-field-box">
                <label class="gb-field-label">
                    <i class="bi bi-chat-left-text"></i>
                    Descrição
                </label>
                <p class="gb-field-value">@Html.DisplayFor(m => m.Description)</p>
            </div>
        </div>

        <!-- COVER URL -->
        <div class="col-lg-6">
            <div class="gb-field-box">
                <label class="gb-field-label">
                    <i class="bi bi-image"></i>
                    URL da Capa
                </label>
                <p class="gb-field-value text-break">
                    @if (string.IsNullOrEmpty(Model.CoverUrl))
                    {
                        <span class="text-muted">Não informada</span>
                    }
                    else
                    {
                        @Html.DisplayFor(m => m.CoverUrl)
                    }
                </p>
            </div>
        </div>

        <!-- AUTOR -->
        <div class="col-lg-6">
            <div class="gb-field-box">
                <label class="gb-field-label">
                    <i class="bi bi-person"></i>
                    Autor
                </label>
                <p class="gb-field-value">@Html.DisplayFor(m => m.AuthorId)</p>
            </div>
        </div>
    </div>
</div>

@if (Model?.CharacterSheet != null)
{
    <!-- SECTION 2: FICHA DE PERSONAGEM -->
    <div class="gb-section">
        <div class="gb-section-header">
            <h2>
                <span class="gb-section-number">2</span>
                Ficha de Personagem
            </h2>
        </div>

        <div class="row g-4">
            <!-- STATUS DA FICHA -->
            <div class="col-lg-4">
                <div class="gb-field-box">
                    <label class="gb-field-label">
                        <i class="bi bi-person-badge"></i>
                        Status
                    </label>
                    <p class="gb-field-value">
                        <span class="badge @(Model.CharacterSheet.Enabled ? "bg-success" : "bg-secondary")">
                            @(Model.CharacterSheet.Enabled ? "Habilitada" : "Desabilitada")
                        </span>
                    </p>
                </div>
            </div>

            <!-- STATUS DO INVENTÁRIO -->
            <div class="col-lg-4">
                <div class="gb-field-box">
                    <label class="gb-field-label">
                        <i class="bi bi-bag"></i>
                        Inventário
                    </label>
                    <p class="gb-field-value">
                        <span class="badge @((Model.CharacterSheet.Inventory?.Enabled ?? false) ? "bg-success" : "bg-secondary")">
                            @((Model.CharacterSheet.Inventory?.Enabled ?? false) ? "Habilitado" : "Desabilitado")
                        </span>
                    </p>
                </div>
            </div>

            @if (Model.CharacterSheet.Inventory?.Enabled == true)
            {
                <!-- MODO DO INVENTÁRIO -->
                <div class="col-lg-4">
                    <div class="gb-field-box">
                        <label class="gb-field-label">
                            <i class="bi bi-sliders"></i>
                            Modo
                        </label>
                        <p class="gb-field-value">
                            <span class="badge bg-info">@Model.CharacterSheet.Inventory.Mode</span>
                        </p>
                    </div>
                </div>

                <!-- SLOTS ou CAPACIDADE -->
                @if (Model.CharacterSheet.Inventory.Mode == InventoryMode.Slots)
                {
                    <div class="col-lg-4">
                        <div class="gb-field-box">
                            <label class="gb-field-label">
                                <i class="bi bi-grid-3x3-gap"></i>
                                Total de Slots
                            </label>
                            <p class="gb-field-value">@Model.CharacterSheet.Inventory.Slots</p>
                        </div>
                    </div>
                }
                else if (Model.CharacterSheet.Inventory.Mode == InventoryMode.Weight)
                {
                    <div class="col-lg-4">
                        <div class="gb-field-box">
                            <label class="gb-field-label">
                                <i class="bi bi-scale"></i>
                                Capacidade
                            </label>
                            <p class="gb-field-value">@Model.CharacterSheet.Inventory.Capacity</p>
                        </div>
                    </div>
                }
            }
        </div>

        @{
            var attrs = (Model?.CharacterSheet?.Attributes ?? new List<AttributeDefinition>())
            .OrderBy(a => a.Order)
            .ToList();
        }

        <!-- ATRIBUTOS DA FICHA -->
        @if (attrs.Count > 0)
        {
            <div class="gb-attributes-section mt-4">
                <h5 class="mb-3">
                    <i class="bi bi-lightning-fill"></i>
                    Atributos (@attrs.Count)
                </h5>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="gb-table-header">
                            <tr>
                                <th style="width:50px;">
                                    <i class="bi bi-sort-down"></i>
                                </th>
                                <th style="width:100px;">Key</th>
                                <th style="width:150px;">Label</th>
                                <th style="width:100px;">Tipo</th>
                                <th style="width:60px;">Min</th>
                                <th style="width:60px;">Max</th>
                                <th style="width:80px;">Padrão</th>
                                <th>Opções</th>
                                <th style="width:60px;">
                                    <i class="bi bi-eye"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in attrs)
                            {
                                <tr class="gb-table-row">
                                    <td>
                                        <span class="badge bg-secondary">@a.Order</span>
                                    </td>
                                    <td><code class="gb-code">@a.Key</code></td>
                                    <td>
                                        <strong>@a.Label</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">@a.Type</span>
                                    </td>
                                    <td>@(a.Min?.ToString() ?? "-")</td>
                                    <td>@(a.Max?.ToString() ?? "-")</td>
                                    <td>@(a.Default?.ToString() ?? "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(a.EnumOptions))
                                        {
                                            <small class="text-muted">@a.EnumOptions</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (a.Visible)
                                        {
                                            <i class="bi bi-eye-fill text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-eye-slash text-muted"></i>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0 mt-3">
                <i class="bi bi-info-circle"></i>
                Nenhum atributo definido para esta ficha.
            </div>
        }
    </div>
}

<!-- ACTION BUTTONS -->
<div class="gb-actions mt-5">
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i>
            Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>
            Voltar para Lista
        </a>
    </div>
</div>
