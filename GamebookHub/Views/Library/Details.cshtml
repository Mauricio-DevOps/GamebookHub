@model GamebookHub.Models.Gamebook
@{
    ViewData["Title"] = Model.Title;
}

@section Styles {
    <link rel="stylesheet" href="~/css/gamebook-details.css" asp-append-version="true" />
}

<div class="gamebook-container">

    <!-- Botão no canto superior esquerdo -->
    <div>
        <a class="btn btn-outline-light" asp-controller="Library" asp-action="Index">
            &larr; Voltar à Biblioteca
        </a>
    </div>

    <!-- Conteúdo central -->
    <div class="gamebook-content">
        <img src="@(Model.CoverUrl ?? "/images/placeholder.png")"
             alt="@Model.Title"
             class="gamebook-cover" />

        <div class="gamebook-info">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            <a class="btn btn-success btn-lg"
               href="@Url.Action("Play", "Game", new { slug = Model.Slug })">
                Começar / Continuar
            </a>
        </div>
    </div>
</div>
