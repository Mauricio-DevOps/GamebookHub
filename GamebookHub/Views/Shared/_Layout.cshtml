@*
  Views/Shared/_Layout.cshtml
  Layout principal do GamebookHub
*@
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GamebookHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamebookHub.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Espaço opcional para páginas injetarem CSS adicional *@
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="site-header">
        <div class="layout">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">GamebookHub</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        
                        <li class="nav-item"><a class="nav-link" asp-controller="Library" asp-action="Index">Biblioteca</a></li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Author"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Admin" asp-controller="Gamebooks" asp-action="Index">
                                            Gerenciar livros
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Account" asp-action="CreateUser">
                                                Cadastrar usuário
                                            </a>
                                        </li>
                                    }
                                    @* adicione mais opções aqui; quando enviar o link exato eu ajusto *@
                                </ul>
                            </li>
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
    </header>
    <main role="main" class="page">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html>
